// === GAMING - Fullscreen & Performance ===

window-rule {
    match app-id="^steam$"
    match title="Tom Clancy's The Division"
    match title="Cyberpunk 2077"
    match app-id="^net.lutris.Lutris$"
    open-maximized true
    open-on-workspace "3"
}


// === BROWSERS - Fullscreen ===

window-rule {
    match app-id="^brave-browser$"
    match app-id="^firefox$"
    match app-id="^chromium$"
    open-maximized true
    open-on-workspace "1"
}


// === MODDING TOOLS - Floating Windows ===

window-rule {
    match title="Vortex"
    match title="Mod Organizer"
    match title="Wabbajack"
    open-floating true
    default-column-width { fixed 1280; }
    open-on-workspace "3"
}


// === DEVELOPMENT ===

window-rule {
    match app-id="^org.kde.kate$"
    match app-id="^code$"
    open-maximized true
    open-on-workspace "2"
}


// === PHOTOGRAPHY ===

window-rule {
    match app-id="^gimp"
    match app-id="^darktable$"
    match app-id="^rawtherapee$"
    match app-id="^digikam$"
    open-on-workspace "5"
}

// === STREAMING / OBS ===

window-rule {
    match app-id="^com.obsproject.Studio$"
    open-maximized true
    open-on-workspace "4"
}

// === COMMUNICATION ===

window-rule {
    match app-id="^discord$"
    match app-id="^Signal$"
    match app-id="^telegram"
    open-on-workspace "7"
}

// === FILE MANAGERS ===

window-rule {
    match app-id="^thunar$"
    open-on-workspace "9"
}
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Window Rules â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// https://github.com/YaLTeR/niri/wiki/Configuration:-Window-Rules

window-rule {
    match at-startup=true app-id="discord"
    open-on-workspace "Communication"
    open-maximized true
}

window-rule {
    match app-id="firefox"
    open-on-workspace "browser"
    open-maximized true
}

window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true // Always float Firefox PiP windows
}

window-rule {
    geometry-corner-radius 12 // Set every window radius to 20
    clip-to-geometry true
}

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Layer Rules â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// https://github.com/YaLTeR/niri/wiki/Configuration:-Layer-Rules

layer-rule {
    match namespace="^swww-daemon$"
    place-within-backdrop true
}

layer-rule {
    match namespace="^quickshell-wallpaper$"
}

layer-rule {
    match namespace="^quickshell-overview$"
    place-within-backdrop true
}

window-rule {
    match is-active=false
    opacity 0.9
}

// Set the regular wallpaper on the backdrop.
layer-rule {
    match namespace="^noctalia-wallpaper*"
    place-within-backdrop true
}
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Environment Variables â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// https://github.com/YaLTeR/niri/wiki/Configuration:-Miscellaneous#environment

environment {
    // Qt/GTK theming
    QT_QPA_PLATFORM "wayland"
    QT_QPA_PLATFORMTHEME "gtk3"
    QT_QPA_PLATFORMTHEME_QT6 "gtk3"
    QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
    TERMINAL "ghostty"

    // GTK
    GDK_BACKEND "wayland"

    // AMD GPU optimization
    RADV_PERFTEST "gpl"
    mesa_glthread "true"

    // Electron apps
    ELECTRON_OZONE_PLATFORM_HINT "auto"

    // XDG
    XDG_CURRENT_DESKTOP "niri"
    XDG_SESSION_TYPE "wayland"
}

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Misc â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
hotkey-overlay {
    skip-at-startup
}

// Debug options (disable in production)
debug {
    //enable-offload-optimizations true
    //enable-xwayland-timeout true
    render-drm-device "/dev/dri/renderD128"
    honor-xdg-activation-with-invalid-serial
}


