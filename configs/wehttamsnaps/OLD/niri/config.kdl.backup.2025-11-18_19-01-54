layout {
    gaps 8
    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    focus-ring {
        width 2

        active-color "#89b4fa"     // Catppuccin Blue
        inactive-color "#313244"   // Catppuccin Surface0

        active-gradient from="#89b4fa" to="#cba6f7" angle=45
        inactive-gradient from="#313244" to="#1e1e2e" angle=45
    }

    border {
        width 1
        active-color "#89b4fa"
        inactive-color "#313244"

        active-gradient from="#89b4fa" to="#cba6f7" angle=90
        inactive-gradient from="#313244" to="#1e1e2e" angle=90
    }

    struts {
        left 0
        right 0
        top 0
        bottom 0
    }
}

