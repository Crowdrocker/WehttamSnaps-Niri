    slowdown 1.0

    window-open {
        duration-ms 150
        curve "ease-out-cubic"
    }

    window-close {
        duration-ms 150
        curve "ease-in-cubic"
    }

    window-movement {
        duration-ms 200
        curve "ease-out-cubic"
    }

