// === WORKSPACE BEHAVIOR ===

workspaces {
    // Number of workspaces on this monitor
    // We define 10 workspaces for comprehensive organization
    output "DP-3" {
        workspace-count 10
    }
}

// === WORKSPACE SWITCHING BEHAVIOR ===

// Smooth transitions between workspaces
workspace-switch {
    animation {
        duration-ms 200
        curve "ease-out-cubic"
    }
}

// === WORKSPACE-SPECIFIC SETTINGS ===

// Workspace 1 (Browser) - No special settings, just browsers
// Already configured via window rules

// Workspace 2 (Terminal) - Standard development layout
// Ghostty/Kate side by side, Thunar accessible

// Workspace 3 (Photo) - Fullscreen photo editors
// GIMP/Darktable take full screen for maximum canvas
workspace-rule "3" {
    // Prefer fullscreen for photo editing apps
    prefer-fullscreen true
}

// Workspace 4 (Design) - Fullscreen design tools
workspace-rule "4" {
    prefer-fullscreen true
}

// Workspace 5 (3D) - Fullscreen Blender
workspace-rule "5" {
    prefer-fullscreen true
}

// Workspace 6 (Chat) - Multiple columns for different chats
// Discord, Telegram side by side

// Workspace 7 (Media) - Media players and webapps
// Spotify + YouTube/Twitch webapps

// Workspace 8 (Stream) - OBS fullscreen
workspace-rule "8" {
    prefer-fullscreen true

    // J.A.R.V.I.S. notification when switching to streaming workspace
    on-enter {
        spawn "sh" "-c" "~/.config/wehttamsnaps/scripts/jarvis-manager.sh streaming"
    }
}

// Workspace 9 (Gaming) - All games fullscreen, no borders
workspace-rule "9" {
    prefer-fullscreen true
    prefer-no-border true

    // J.A.R.V.I.S. notification when entering gaming workspace
    on-enter {
        spawn "sh" "-c" "~/.config/wehttamsnaps/scripts/jarvis-manager.sh gaming"
    }

    // Optional: Auto-enable gamemode when entering workspace 9
    // Uncomment if you want automatic performance mode
    // on-enter {
    //     spawn "sh" "-c" "~/.config/wehttamsnaps/scripts/toggle-gamemode.sh on"
    // }

    // Optional: Restore normal mode when leaving gaming workspace
    // on-leave {
    //     spawn "sh" "-c" "~/.config/wehttamsnaps/scripts/toggle-gamemode.sh off"
    // }
}

// Workspace 10 (Modding) - Mod managers visible
// Vortex/MO2 need window controls visible

// === WORKSPACE NAVIGATION TIPS ===
//
// Quick navigation:
// - Mod+1 through Mod+0 to jump directly
// - Mod+Ctrl+Left/Right to cycle through workspaces
// - Mod+Shift+1-0 to move current window to workspace
// - Mod+Alt+1-0 to move window and follow
//
// Workspace organization philosophy:
// 1-2: Daily productivity (browser, terminal, files)
// 3-5: Creative work (photo, design, 3D)
// 6-7: Communication and entertainment
// 8-10: Content creation and gaming

// === EMPTY WORKSPACE BEHAVIOR ===

// Automatically skip empty workspaces when cycling
skip-empty-workspaces true

// Keep at least one workspace available
minimum-workspaces 1

// === WORKSPACE NAMING ===

// Show workspace names in bar/overlay
show-workspace-names true

// Use icons in addition to names (for Noctalia bar)
show-workspace-icons true

// === WORKSPACE PERSISTENCE ===

// Remember workspace layouts between sessions
// This is handled by Niri's state management automatically

